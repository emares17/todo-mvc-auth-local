    <header class="flex-row">
        <h1>TODO</h1>
        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26">
            <path fill="#FFF" fill-rule="evenodd" d="M13 0c.81 0 1.603.074 2.373.216C10.593 1.199 7 5.43 7 10.5 7 16.299 11.701 21 17.5 21c2.996 0 5.7-1.255 7.613-3.268C23.22 22.572 18.51 26 13 26 5.82 26 0 20.18 0 13S5.82 0 13 0z"/>
        </svg>
    </header>
    <main>
        <form action="/todos/createTodo" method="POST" class="add-new-item flex-row">
          <span></span>
          <input type="text" placeholder="Create a new todo..." name="todoItem" id="addItem">
        </form>
        <section class="content">
          <ul>
            <% todos.forEach( el => { %>
            <li class="flex-row todoItem" data-id="<%=el._id%>">
              <label class="list-item">
                <input class="checkbox" type="checkbox">
                <span class="checkmark"></span>
                <span class='text <%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
              </label>
              <span class="remove del">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18">
                    <path fill="#494C6B" fill-rule="evenodd" d="M16.97 0l.708.707L9.546 8.84l8.132 8.132-.707.707-8.132-8.132-8.132 8.132L0 16.97l8.132-8.132L0 .707.707 0 8.84 8.132 16.971 0z"/>
                </svg>
              </span>
            </li>
            <% }) %>
          </ul>
        </section>


        <div class="bottom-items flex-row">
          <div class="items-left"><%= user.userName %> has <%= left %> items left</div>
          <div class="filter flex-row">
            <label>
              <input type="radio" name="filter" id="all" checked>
              <span>All</span>
            </label>
            <label>
              <input type="radio" name="filter" id="active">
              <span>Active</span>
            </label>
            <label>
              <input type="radio" name="filter" id="completed">
              <span>Completed</span>
            </label>
          </div>
          <span class="clear">Clear Completed</span>
        </div>
      </main>
    <script src="js/main.js"></script>
</body>
